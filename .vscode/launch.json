{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug with gdb",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/pipex",
            "args": ["infile.txt","cat","grep 3","outfile"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "text": "-gdb-set follow-fork-mode parent",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build using Make",
            "miDebuggerPath": "/usr/bin/gdb",
            "logging": {
                "trace": true,
                "traceResponse": true,
                "engineLogging": true
            }
        }
    ]
}
